    <DockPanel>
        <Menu Name="MainMenu" Grid.Row="0" Height="23" DockPanel.Dock="Top">

            <MenuItem Name="FileMenu" Header="{x:Static lang:Resources.Main_FileMenu}">
                <MenuItem Name="FileNew" Header="{x:Static lang:Resources.Main_FileNew}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="FileDocumentPlusOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_FileNewToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="FileOpen" Header="{x:Static lang:Resources.Main_FileOpen}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="FolderOpenOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_FileOpenToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <Separator />
                <MenuItem Name="FileSave" Header="{x:Static lang:Resources.Main_FileSave}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="ContentSaveOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_FileSaveToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="FileSaveAs" Header="{x:Static lang:Resources.Main_FileSaveAs}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="ContentSavePlusOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_FileSaveAsToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <Separator />
                <MenuItem Name="FileClose" Header="{x:Static lang:Resources.Main_FileClose}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="CloseThick" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_FileCloseToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="EditMenu" Header="{x:Static lang:Resources.Main_EditMenu}">
                <MenuItem Name="EditProfile" Header="{x:Static lang:Resources.Main_EditProfile}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="AccountCogOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_EditProfileToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="EditScreenRegions" Header="{x:Static lang:Resources.Main_EditScreenRegions}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="TableEdit" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_EditScreenRegionsToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="ViewMenu" Header="{x:Static lang:Resources.Main_ViewMenu}">
                <MenuItem Name="ViewProfileSummary" Header="{x:Static lang:Resources.Main_ViewProfileSummary}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="TableLarge" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewProfileSummaryToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="ViewProfileNotes" Header="{x:Static lang:Resources.Main_ViewProfileNotes}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="Text" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewProfileNotesToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <Separator />
                <MenuItem Name="ViewDrawScreenRegions" Header="{x:Static lang:Resources.Main_ViewDrawScreenRegions}">
                    <MenuItem.Icon>
                        <CheckBox BorderThickness="0"
                                  IsHitTestVisible="False" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewDrawScreenRegionsToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="ViewShowScreenRegionNames"
                          Header="{x:Static lang:Resources.Main_ViewDrawScreenRegionNames}">
                    <MenuItem.Icon>
                        <CheckBox BorderThickness="0"
                                  IsHitTestVisible="False" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewDrawScreenRegionNamesToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="ViewDrawPointerIndicator"
                          Header="{x:Static lang:Resources.Main_ViewDrawPointerIndicator}">
                    <MenuItem.Icon>
                        <CheckBox IsHitTestVisible="False" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewDrawPointerIndicatorToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="ViewDrawStateOverlay" Header="{x:Static lang:Resources.Main_ViewDrawStateOverlay}">
                    <MenuItem.Icon>
                        <CheckBox BorderThickness="0"
                                  IsHitTestVisible="False" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ViewDrawStateOverlayToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="ToolsMenu" Header="{x:Static lang:Resources.Main_ToolsMenu}">
                <MenuItem Name="ToolsOptions" Header="{x:Static lang:Resources.Main_ToolsOptions}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="Cogs" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_ToolsOptionsToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
            </MenuItem>
            <!-- <MenuItem Name="WindowMenu" Header="{x:Static lang:Resources.Main_WindowMenu}"> -->
            <!-- 	<Separator/> -->
            <!-- 	<MenuItem Name="WindowShowTitleBars" Header="{x:Static lang:Resources.Main_WindowShowTitleBars}" > -->
            <!-- 		<ToolTip.Tip> -->
            <!-- 			<ToolTip Content="{x:Static lang:Resources.Main_WindowShowTitleBarsToolTip}"></ToolTip> -->
            <!-- 		</ToolTip.Tip> -->
            <!-- 	</MenuItem> -->
            <!-- </MenuItem> -->
            <MenuItem Name="HelpMenu" Header="{x:Static lang:Resources.Main_HelpMenu}" HorizontalAlignment="Right">
                <MenuItem Name="HelpUserGuide" Header="{x:Static lang:Resources.Main_HelpUserGuide}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="HelpCircleOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_HelpUserGuideToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <MenuItem Name="HelpEventLog" Header="{x:Static lang:Resources.Main_HelpEventLog}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="WrenchOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_HelpEventLogToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
                <Separator />
                <MenuItem Name="HelpAbout" Header="{x:Static lang:Resources.Main_HelpAbout}">
                    <MenuItem.Icon>
                        <mi:MaterialIcon Kind="InformationOutline" />
                    </MenuItem.Icon>
                    <ToolTip.Tip>
                        <ToolTip Content="{x:Static lang:Resources.Main_HelpAboutToolTip}"></ToolTip>
                    </ToolTip.Tip>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock />
    </DockPanel>
</Window>